//write a program for max and min value
#include <stdio.h>

int main() {
   int i,max,min,a[5];
        printf("\n enter the element:");
        for(i=0;i<5;i++)
   {
        scanf("%d",&a[i]);
   }
   printf("\n the element of array is :");
   for(i=0;i<5;i++)
   {
       printf("\n %d",a[i]);
   }
   max=a[0];
   min=a[0];
   for(i=0;i<5;i++)
   {
       if(a[i]>max)
      // for maximun value
           max=a[i];
      // for minimum value
      if(a[i]<min)
          min=a[i];
       }
       printf(" \n max value = %d",max);
       printf(" \n min value = %d",min);
    return 0;
}
