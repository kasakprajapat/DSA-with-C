//write a program for linera search
#include <stdio.h>
int main()
{
int arr[80], i, size, element,pos=-1;
    printf("enter the size of array under 80:");
    scanf("%d",&size);
    printf("enter the array element:");
    for(i=0;i<=size;i++)
{
    scanf("%d",&arr[i]);
}    
    printf("enter the element to be searched:");
    scanf("%d",&element);
          for (int i = 0; i < size; i++)
          {
            if (arr[i] == element)
            {
                pos=i;
                break;
            }
          }
    if(pos==-1)
        {
            printf("element not found");
        }
    else
        {
            printf("element %d found at index:%d",element,pos);
        }
return 0;
}
